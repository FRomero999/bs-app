<h1>Gestor usuarios</h1>
<div class="container border border-3 p-3 rounded-3">

    <div class="row">

    <div class="col-lg-6 table-responsive">
      <h2>Listado</h2>
      <table class="table table-bordered table-striped table-hover" id="tabla">
        <thead>
          <tr>
            <th>Posicion</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
          <template id="userRow">
          <tr>
            <td class="pos"></td>
            <td class="nombre"></td>
            <td class="email">[index].email %></td>
            <td><a href="#" class="btn btn-danger btn-sm button-delete">Borrar</a></td>
          </tr>             
          </template>
        </tbody>
      </table>
      <button class="btn btn-primary" id="reload">Recargar tabla</button>
    </div>

    <form class="col-lg-6" method="post">
      <h2>Nuevo</h2>
      <div class="mb-2">
        <input class="form-control" type="text" name="nombre" placeholder="nombre">
      </div>
      <div class="mb-2">
        <input class="form-control" type="email" name="email" placeholder="email">
      </div>
      <button class="btn btn-primary">AÃ±adir</button>
    </form>

  </div>

</div>